<Window x:Class="ZadanieNaAvtomatKolegWPF.EditOcenkaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZadanieNaAvtomatKolegWPF"
        mc:Ignorable="d"
              Title="Изменение оценки" Height="200" Width="300">
	<Grid>
		<StackPanel Margin="20">
			<TextBlock Text="Новая оценка:" FontSize="14"/>
			<TextBox x:Name="OcenkaTextBox" Text="5" Margin="0,5,0,10"/>
			<Button Content="Сохранить" Click="SaveButton_Click" Width="100" HorizontalAlignment="Center"/>
		</StackPanel>
	</Grid>
</Window>
