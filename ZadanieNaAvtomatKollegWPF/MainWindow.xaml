<Window x:Class="ZadanieNaAvtomatKollegWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Колледж" Height="350" Width="500">
	<Grid>
		<StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
			<TextBlock Text="Выберите роль:" FontSize="16" Margin="0,0,0,10"/>
			<ComboBox x:Name="RoleComboBox" SelectedIndex="0" Margin="0,0,0,10">
				<ComboBoxItem Content="Студент"/>
				<ComboBoxItem Content="Преподаватель"/>
				<ComboBoxItem Content="Заведующий отделением"/>
			</ComboBox>
			<TextBlock Text="Логин:" Margin="0,0,0,5"/>
			<TextBox x:Name="LoginTextBox" Margin="0,0,0,10"/>
			<TextBlock Text="Пароль:" Margin="0,0,0,5"/>
			<PasswordBox x:Name="PasswordBox" Margin="0,0,0,10"/>
			<Button Content="Войти" Click="LoginButton_Click" Width="100" HorizontalAlignment="Center"/>
		</StackPanel>
	</Grid>
</Window>